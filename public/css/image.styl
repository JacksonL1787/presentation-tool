body
	-webkit-tap-highlight-color transparent !important


.presentation-image-wrap
	position absolute
	cursor pointer;

	&.selected
		.image-editor-wrap
			display block
	.presentation-image
		width 100%
		height 100%
	.image-editor-wrap
		width 100%
		display none
		height 100%
		position absolute
		.image-border
			border 3px solid #3fd0ff
			z-index 3
			box-shadow 0 0 3px 2px rgba(0,0,0,0.04)
			position absolute
			width calc(100% - 4px)
			height calc(100% - 4px)
			cursor move
		.image-move-dot
			width 15px
			z-index 5
			height 15px
			border-radius 15px
			background #3fd0ff
			cursor pointer
			transition background .2s
			box-shadow 0 0 3px 2px rgba(0,0,0,0.04)
			position absolute
			&:hover
				background #00c0ff
			&.image-move-dot-left
				top 50%
				transform translateY(-50%)
				left -7.5px
				cursor ew-resize
			&.image-move-dot-bottom
				left 50%
				transform translateX(-50%)
				bottom -7.5px
				cursor ns-resize
			&.image-move-dot-top
				left 50%
				transform translateX(-50%)
				top -7.5px
				cursor ns-resize
			&.image-move-dot-right
				top 50%
				transform translateY(-50%)
				right -7.5px
				cursor ew-resize
			&.image-move-dot-top-left
				top -5px
				left -5px
				cursor nwse-resize
			&.image-move-dot-bottom-left
				bottom -5px
				left -5px
				cursor nesw-resize
			&.image-move-dot-top-right
				top -5px
				right -5px
				cursor nesw-resize
			&.image-move-dot-bottom-right
				bottom -5px
				right -5px
				cursor nwse-resize
