.go-back-btn
	color grey
	font-weight bold
	position absolute
	top 15px
	left 20px
	cursor pointer
	transition color .3s
	&:hover
		color #3e3e3e

.main
	width fit-content
	height fit-content
	position absolute
	top 60px
	text-align center
	left 50%
	transform translateX(-50%)
	.section1
		margin-bottom 100px
	.section
		h1
			margin 0 0 30px
			text-align center
			color #333
		.presentation-title-inpt
			outline none
			border none
			border-bottom 2px solid lightgrey
			padding 2px 10px
			font-size 17px
			width 300px
			color #464646
		.preview-design-btn
			color #00c0ff
			display none
			position absolute
			left 50%
			text-decoration none
			transform translateX(-50%)
			cursor pointer
			&:hover
				text-decoration underline
		.design-options-wrap
			max-width 550px
			margin-top 50px
			display flex
			justify-content center
			flex-flow wrap row
			.design-outer-wrap
				width: fit-content
				height: fit-content
				position relative
				.design-wrap
					position relative
					margin 20px
					height 50px
					width 50px
					border-radius .45em
					cursor pointer
					background lightgrey
					box-shadow none
					transition background .3s, box-shadow .3s
					&:hover,
					&.selected
						background #3fd0ff
						box-shadow 0 0 0 1px #3fd0ff
					&:hover + .design-desc,
					&.selected + .design-desc
						opacity 1
					.design
						width 42px
						height 42px
						border-radius .3em
						position absolute
						top 50%
						left 50%
						transform translate(-50%, -50%)
				.design-desc
					color #b7b7b7
					position absolute
					font-size 13.5px
					margin 0
					left 50%
					transform translateX(-50%)
					bottom 0
					opacity 0
					transition opacity .3s
.submit-btn
	color white
	background #3fd0ff
	border none
	outline none
	position absolute
	left 50%
	bottom 10px
	font-weight bold
	transform translateX(-50%)
	text-align center
	padding 8px 35px
	cursor pointer
	display none
	font-size 15px
	border-radius 10000px
	width 200px
	transition background .3s, bottom .3s
	&:hover
		background #00c0ff
	&.active
		bottom 40px
