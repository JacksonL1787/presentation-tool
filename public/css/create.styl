.main
	width fit-content
	height fit-content
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
h1
	position absolute
	left 50%
	margin 0
	transform translateX(-50%)
	top -75px
	width 100vw
	text-align center
	color #333
.presentation-title-inpt
	outline none
	border none
	border-bottom 2px solid lightgrey
	padding 2px 10px
	font-size 20px
	width 300px
	color #464646
.submit-btn
	position absolute
	left 50%
	bottom -60px
	transform translateX(-50%)
	color white
	background #3fd0ff
	border none
	outline none
	margin 10px 0 5px
	text-align center
	padding 8px 35px
	cursor pointer
	font-size 14.5px
	transition background .3s
	&:hover
		background #00c0ff
.go-back-btn
	color grey
	font-weight bold
	position absolute
	top 15px
	left 20px
	cursor pointer
	transition color .3s
	&:hover
		color #3e3e3e
