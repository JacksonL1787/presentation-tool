.top-container
  width 100%
  height 100px
  .top-nav
    background white
    width 100%
    height 60px
    z-index 3 !important
    border-bottom 1px solid #e4e5e6
    .content-wrap
      width calc(100% - 30px)
      margin-left 15px
      height 100%
      .left
        width fit-content
        height 100%
        float left
        display flex
        justify-content left
        .go-back-btn
          background-image url('../img/left-arrow.svg')
          background-size cover
          background-position center
          background-repeat no-repeat
          width 20px
          height 20px
          opacity .4
          transition opacity .3s
          cursor pointer
          margin-top 20px
          &:hover
            opacity .8
        .presentation-title
          color black
          outline none
          margin 13px 0 13px 10px
          padding 3px
          min-width 200px
          font-size 22px
          cursor text
          font-weight 200
          border 1px solid #d9d9d9
          &:focus,
          &:hover
            border 1px solid #ccc
          &:empty:before
            content attr(placeholder)
            color grey
            font-size 22px
            display block
        .last-modified
          color grey
          font-size 13.5px
          margin-left 10px
          margin-top 23px
        .options-nav
          margin-left 20px
          height 100%
          display flex
          justify-content left
          .option-wrap
            margin-top 18px
            button
              background none
              cursor pointer
              font-size 14px
              border none
              border-radius .3em
              outline none
              color #333
              padding 3px 10px
              &:hover
                background rgba(0,0,0,0.1)
              &.active
                background rgba(63, 208, 255, 0.3)
      .right
        width fit-content
        max-width 50%
        height 100%
        float right
        .present-btn
          background #3fd0ff
          margin-top 14px
          padding 8px 20px 7px 45px
          border-radius 10000px
          cursor pointer
          height fit-content
          position relative
          width fit-content
          transition background .3s
          &:hover
            background #00c0ff
          .icon
            width 22px
            height 22px
            position absolute
            top 50%
            transform translateY(-50%)
            left 10px
          .btn-text
            color white
            margin 0
            font-weight bold

  .bottom-nav
    background white
    border-bottom 1px solid #e4e5e6
    z-index 4
    position absolute
    width 100%
    height 50px
    .content-wrap
      width 95%
      margin-left 5%
      .pill-btns-wrap
        display flex
        height 100%
        .pill-btn
          background rgba(0,0,0,0.05)
          width 130px
          height 25px
          cursor pointer
          margin-top 12.5px
          border-radius 30px
          margin-right 20px
          text-align center
          position relative
          transition background .4s
          &:hover
            background rgba(0,0,0,0.12)
          p
            margin 0
            color #333
            display block
            font-size 14px
            position absolute
            top 50%
            width 100%
            left 50%
            transition color .4s
            transform translate(-50%, -50%)
.main
  height: calc(100vh - 100px);
  height: calc((var(--vh, 1vh) * 100) - 100px);
  position relative
  width 100%
  .slide-selection-wrap
    background white
    position absolute
    left 0
    top 0
    height 100%
    border-right 1px solid #e4e5e6
    z-index 3
    border-left none
    width 200px
    .slide-selection-title
      color #333
      margin: 35px 0 20px
      text-align center
      font-size 22px
    .all-slides-wrap
      width 50px
      height fit-content
      margin 0 auto
      .create-slide-btn
        width 50px
        height 50px
        border-radius 40px
        border 3px solid rgba(0,0,0,0.15)
        position relative
        margin 0 auto
        transform translateX(-1.5px)
        cursor pointer
        background white
        transition border .3s
        &:hover
          border 3px solid #3fd0ff
        &:hover p
          color #3fd0ff
        p
          color grey
          font-size 35px
          position absolute
          margin 0
          font-weight 100
          top calc(50% - 2px)
          left 50%
          transform translate(-50%, -50%)
          transition color .3s
      .connector
        height 30px
        width 10px
        background rgba(0,0,0,0.06)
        margin-left 20px
      .slide-wrap
        background rgba(0,0,0,0.15)
        width 50px
        height 50px
        border-radius 50px
        transition background .3s, box-shadow .3s
        box-shadow none
        position relative
        cursor pointer
        &:hover,
        &.active
          background #3fd0ff
          box-shadow 0 0 0 3px #3fd0ff
        p
          margin 0
          color white
          font-size 25px
          font-weight bold
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
  .slides-preview
    width calc(100% - 200px)
    height 100%
    margin-left 200px
    background #F1F3F4
    position relative
    overflow auto
    #editor-preview
      height 706px
      width 1200px
      position absolute
      top 50%
      left 50%
      box-shadow 0 0 0 2px lightgrey, 0 0 0 4px #e4e5e6, 0 0 0 5px lightgrey
      h1
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        color white
        font-size 75px
        margin 0
