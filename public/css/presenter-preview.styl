.main-content
  height: 100vh;
  height: calc(var(--vh, 1vh) * 100);
  width 100%
  background blue
  #main-slides
    width 100%
    height 100%
    canvas
      animation fadeIn 1.2s
  .hoverarea
    bottom 0
    left 0
    position absolute
    width 400px
    height 200px
    z-index 4
  .toolbar
    position absolute
    background #333
    border-radius .5em
    width fit-content
    padding 10px 20px 20px
    display flex
    justify-content center
    bottom 10px
    left 10px
    z-index 5
    opacity 0
    transition opacity .5s
    &.active
      opacity 1
    .toolbar-option
      width 20px
      height 20px
      position relative
      margin-top 7.5px
      cursor pointer
      &:hover path
        fill #3fd0ff
      &#close-presenter
        margin-right 30px
      &#previous-slide
        margin-right 10px
      svg
        path
          fill white
          transition fill .3s

@keyframes fadeIn
  0%
    opacity 0
    transform scale(0)
  100%
    opacity 1
    transform scale(1)
